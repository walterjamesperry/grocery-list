<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <title>MongoDB Grocery List</title>
    </head>

    <body>
        <form action="/" method="post">
            <p>Item: <input type="text" name="item"></p>
            <p>Quantity: <input type="text" name="number"><p>
            <p><input type="submit" value="+ Add Item"><p>
        </form>

        <ul>
            <% items.forEach((item) => { %>
              <li><%= item.text %> - <%= item.number %></li>
            <% }) %>
        </ul>
    </body>
</html>
